= content_for :title do
  = "#{@search_query.to_s}"
= content_for :content do
  .search-queries-view
    %h1
      = "#{@search_query.to_s}"
      %small= "(#{@search_items.count} of them) #{updated_time_ago(@last_update)}"

    %table.no-borders.search-items-table
      %tbody
        - @search_items.each do |search_item|
          %tr.search-item
            %td.search-item-thumbnail
              %a.th
                %img.profile-pic{src: search_item.profile_pic}
            %td
              .profile-description
                %h4
                  %a.full-name{href: search_item.href}= search_item.name
                  - if search_item.number_of_surfers > 1
                    %span.number_of_surfers= "+#{search_item.number_of_surfers-1}"
                  %small
                    %strong
                      %span= "#{search_item.gender}, #{search_item.age}."
                  %small
                    %span.country= search_item.lives_in
                .created_at
                  First appeared at:
                %span.created_at_time= search_item.created_at # todo: humanize

                %p
                  - if search_item.occupation
                    .occupation
                      %strong Occupation:
                      %span= search_item.occupation
                  - if search_item.mission
                    .mission
                      %strong Mission:
                      %span= search_item.mission
                  - if search_item.about
                    .about
                      %strong About:
                      %blockquote= search_item.about
                  - if search_item.open_request
                    .open-request
                      %strong
                        Open Request
                        - if search_item.arrival_date || search_item.departure_date
                          %span.request-dates
                            from
                            %span= search_item.arrival_date
                            till
                            %span= search_item.departure_date
                      %blockquote= search_item.open_request
