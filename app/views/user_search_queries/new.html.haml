= content_for :content do
  %h1 Add new watch
  .new-user-search-query-view
    %ul.button-group.search-mode-select
      %li
        %a.button(data-bind="button_select: search_mode, value: 'S'")
          Surfers
      %li
        %a.button(data-bind="button_select: search_mode, value: 'H'")
          Hosts
      %li
        %a.button(data-bind="button_select: search_mode, value: 'T'")
          Travelers
      %li
        %a.button(data-bind="button_select: search_mode, value: 'L'")
          Locals

  = render partial: 'locations/location_select_form',
  locals: {submit_url: user_search_queries_path, id: 'create-user-search-query-form', fields: {search_mode: ''}}

  .new-watch-location-search
    = render 'locations/search_locations'
